= render "header"
= render "menubar"
.search-main
  =render "search_form"
  .search-main__right
    .search-main__right__title
      検索結果
      .search-main__right__box
        = paginate(@result)
        -unless @result.empty?
          .search-main__right__box__estimate
            -@result.each do |estimate|
              .search-main__right__box__estimate__estimate-box
                = render partial: "estimate_new", locals:{estimate: estimate}
                = render partial: "estimate_box", locals:{estimate: estimate}
        -else
          .search-main__right__non
            %p 検索結果に該当する見積りはありません