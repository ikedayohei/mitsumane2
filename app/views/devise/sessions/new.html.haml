=render "estimates/header"
.login-main
  .login-main__title
    ログイン
  .login-main__box
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .login-main__box__field
        %p テストアカウント(メールアドレス) 
        %p aaaaa@gmail.com
        %p テストアカウント(パスワード) 
        %p 12345678
        %br/
        = f.label :メールアドレス , class: "login-main__box__field__label"
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email" ,class: "login-main__box__field__contanir"
      
      .login-main__box__field
        = f.label :パスワード, class: "login-main__box__field__label"
        %br/
        = f.password_field :password, autocomplete: "current-password",class: "login-main__box__field__contanir"
      - if devise_mapping.rememberable?
        .login-main__box__field
          = f.check_box :remember_me, class: "login-main__box__field__checkbox"
          = f.label :remember_me, class: "login-main__box__field__label"
      .login-main__box__field
        = f.submit "ログイン",class: "login-main__box__field__submit"
      .login-main__box__field
        =link_to "トップページに戻る", root_path
      .login-main__box__field
        =link_to "新規登録する", new_registration_path(resource_name)