=render "estimates/header"
.login-main
  .login-main__title
    新規登録
  .login-main__box
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .login-main__box__field
        = f.label :名前 ,class: "login-main__box__field__label"
        %br/
        = f.text_field :name, autofocus: true,class: "login-main__box__field__contanir"
      .login-main__box__field
        = f.label :メールアドレス,　class: "login-main__box__field__label"
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email",class: "login-main__box__field__contanir"
      .login-main__box__field
        = f.label :会社名,class: "login-main__box__field__label"
        %br/
        = f.text_field :company_name, autofocus: true,autocomplete: "company_name",class: "login-main__box__field__contanir"
      .login-main__box__field
        = f.label :パスワード,class: "login-main__box__field__label"
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} 文字以上)
        %br/
        = f.password_field :password, autocomplete: "new-password",class: "login-main__box__field__contanir"
      .login-main__box__field
        = f.label :パスワード確認,class: "login-main__box__field__label"
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password",class: "login-main__box__field__contanir"
      .login-main__box__field
        = f.submit "新規登録",class: "login-main__box__field__submit"
      .login-main__box__field
        =link_to "トップページに戻る", root_path
